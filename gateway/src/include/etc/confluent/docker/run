echo "===> Configuring Gateway..."

# Run the configure script to validate environment
/usr/bin/docker/configure

# Set default config file if not specified
if [ -z "$GATEWAY_CONFIG_FILE" ]; then
  export GATEWAY_CONFIG_FILE="/etc/gateway/gateway-config.yaml"
fi

# Template the configuration file if template exists
if [ -f "${GATEWAY_CONFIG_FILE}.template" ]; then
  echo "===> Templating configuration file..."
  dub template "${GATEWAY_CONFIG_FILE}.template" "$GATEWAY_CONFIG_FILE"
fi

# Set up classpath - use gateway-docker path as that's where dependencies are placed
GATEWAY_CLASSPATH="/usr/share/java/gateway-docker/*"

# Prepare JVM arguments
JVM_ARGS="$GATEWAY_JVM_OPTS"

# Add logging configuration if available
if [ -f "/etc/gateway/log4j2.yaml" ]; then
  JVM_ARGS="$JVM_ARGS -Dlog4j2.configurationFile=/etc/gateway/log4j2.yaml"
fi

echo "===> Launching Gateway..."
echo "Configuration file: $GATEWAY_CONFIG_FILE"
echo "JVM Args: $JVM_ARGS"

exec java $JVM_ARGS \
  -cp "$GATEWAY_CLASSPATH" \
  io.confluent.gateway.app.GatewayApplication \
  --config "$GATEWAY_CONFIG_FILE"
